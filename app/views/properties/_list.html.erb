<% properties.each do |property| %>

  <div class="col-4 mt-2">
    <div class="property border">

        <div class="property-thumb" style="background-image: url(<%= property_photo_url(property) %>)">
          <%= link_to "", property_path(property) %>
        </div>

        <div class="property-summary p-3">
          <h3 class="h5"><%= link_to property.name, property_path(property) %></h3>


          <span class="mr-2">
            <%= property.rooms %>
            <i class="fa-solid fa-bed text-muted ml-1"></i>
          </span>
          <span class="mr-2">
            <%= property.bathrooms %>
            <i class="fa-solid fa-bath text-muted ml-1"></i>
          </span>
          <span class="mr-2">
            <%= property.parking_spaces %>
            <i class="fa-solid fa-car text-muted ml-1"></i>
          </span>


          <p class="mt-2"><%= property.address %></p>
        </div>

    </div>
  </div>
<% end %>
