<% @properties.each do |property| %>


    <div class="col-4">
        <%= link_to(property_thumbnail(property), property_path(property)) %>
        <h3 class="h5 mt-3"><%= link_to property.name, property_path(property) %></h3>

        <div class="amenities mb-2">
            <span class="mr-2"><%= icon('fa-solid', 'bed')%> <%= property.rooms %></span>
            <span class="mr-2"><%= icon('fa-solid', 'bath')%> <%= property.bathrooms %></span>
            <span class="mr-2"><%= icon('fa-solid', 'car')%> <%= property.parking_spaces %></span>
        </div>
        <p><%= property.address %></p>
    </div>


<% end %>
