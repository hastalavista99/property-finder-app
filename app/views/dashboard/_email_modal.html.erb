

<div id="emailModal" class="modal" tabindex="-1">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">New message for <%= @account.first_name %></h5>
      <button type="button" class="close" id="closeModal">&times;</button>
    </div>
    <div class="modal-body">
      <%= form_tag email_agent_path, id: "email-agent" do %>
        <%= hidden_field_tag :agent_id, @account.id %>
        <div class="form-group">
          <label for="message-text" class="col-form-label">First Name:</label>
          <%= text_field_tag :first_name, nil, id: "message-first-name", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="message-last-name" class="col-form-label">Last Name:</label>
          <%= text_field_tag :last_name, nil, id: "message-last-name", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="message-email" class="col-form-label">Email:</label>
          <%= text_field_tag :email, nil, id: "message-email", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" class="form-control"></textarea>
        </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" id="closeButton" class="btn btn-secondary">Close</button>
      <button type="button" id="sendButton" class="btn btn-success">Send Message</button>
    </div>
  </div>
</div>
